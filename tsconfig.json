{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],                                        
    "jsx": "react-jsx",                              
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "commonjs",                                
    "moduleResolution": "node",                      
    "allowJs": true,                                 
    "noEmit": true,                                  
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                    
    "skipLibCheck": true                                 
  },
  "include": ["src"]
}
